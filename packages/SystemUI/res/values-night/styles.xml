<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.QS.DetailHeader" parent="@android:style/TextAppearance">
        <item name="android:textColor">#424242</item>
    </style>
    <style name="TextAppearance.StatusBar.Expanded" parent="@android:style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.StatusBar.Expanded.Clock" parent="@style/TextAppearance.StatusBar.Expanded">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TextAppearance.NotificationGuts" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">roboto-regular</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Button" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TextAppearance" />
    <style name="systemui_theme" parent="@android:style/Theme.Material.Light.LightStatusBar">
        <item name="android:textColorPrimary">#bdbdbd</item>
        <item name="android:textColorSecondary">#bdbdbd</item>
    </style>
	<style name="BaseBrightnessDialogContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:background">#ffffff</item>
    </style>
	
	    <style name="systemui_light_theme">
        <item name="android:colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="android:textColorPrimary">@*android:color/primary_text_material_dark</item>
        <item name="android:colorPrimary">@color/pixel_primary_color</item>
        <item name="android:colorPrimaryDark">@color/pixel_primary_color</item>
        <item name="android:colorSecondary">@color/pixel_primary_color</item>
		<item name="android:textColor">#212121</item> 
		<item name="android:tilesColor">#212121</item>
    </style>

    <style name="systemui_pixel_theme">
        <item name="android:colorPrimary">@color/pixel_primary_color</item>
        <item name="android:colorPrimaryDark">@color/pixel_primary_color</item>
        <item name="android:colorSecondary">@color/pixel_primary_color</item>
		<item name="android:tilesColor">?android:attr/colorAccent</item>
    </style>
	
    <style name="TextAppearance.StatusBar.Expanded.Clock">
        <item name="android:textSize">@dimen/qs_time_expanded_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#212121</item>
    </style>

</resources>